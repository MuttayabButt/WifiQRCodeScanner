<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity2"
    android:background="@drawable/splash_bg"

    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_tollbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi QR Code Scanner"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textSize="19dp"
            android:padding="3dp"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/iv_main2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"

            android:src="@drawable/ic_more_vert_24"
            android:padding="3dp"
            android:layout_margin="8dp"

            />


    </RelativeLayout>


    <TextView
        android:id="@+id/formate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formate :"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="18dp"
        android:textSize="18dp"
        android:padding="4dp"
        android:fontFamily="serif"
        />





    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/formate"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"


        >

        <TextView
            android:id="@+id/tvformate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WPA ; S: 'Your Wifi Name', P: 'Your Wifi Password' "
            android:textSize="15dp"
            android:padding="15dp"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/delivered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Delivered :"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:padding="4dp"
        android:fontFamily="serif"
        android:layout_below="@id/card"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@id/delivered"


        >

    <TextView
        android:id="@+id/tvShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text to be written"
        android:textSize="18dp"
        android:padding="15dp"
        android:layout_below="@id/delivered"


        />

    </androidx.cardview.widget.CardView>



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/myImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/happy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@id/card2"
        />




    <Button
        android:id="@+id/btn_Wifi"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Wifi"
        android:drawableLeft="@drawable/ic_wifi"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"

        />

    <Button
        android:id="@+id/btn_rate"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Rate us"
        android:drawableLeft="@drawable/ic_rate"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />




</RelativeLayout>